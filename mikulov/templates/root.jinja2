{% extends "base.jinja2" %}

{% block head %}
  <title>Mikulov - anonymous blog platform</title>
{% endblock %}

{% block content %}
<form action="/post" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
  <div class="cf ph2-ns">
    <div class="fl w-100 w-90-ns pa2">
      <input id="title" name="title" placeholder="Post title" type="text" maxsize="60" size="60">
    </div>
    <div class="fl w-100 w-10-ns pa2">
      <input id="submit" value="Submit" type="submit">
    </div>
    <div class="fl w-100 w-100-ns pa2">
      <textarea id="text" name="text" rows="10" cols="100" placeholder="Post contents"></textarea>
    </div>
  </div>
</form>
{% endblock %}
